@model IEnumerable<ControlCampus.Models.Teacher>
@{
    ViewData["Title"] = "Docentes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4">Docentes Registrados</h2>
        <a asp-action="Create" class="btn btn-success btn-sm btn-md-normal">
            <i class="bi bi-person-plus-fill"></i>
            <span class="d-none d-sm-inline">Registrar Docente</span>
            <span class="d-inline d-sm-none">Nuevo</span>
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded border">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th class="text-nowrap">N° Empleado</th>
                    <th>Nombre completo</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th class="text-center">Acción</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var teacher in Model)
                    {
                        <tr>
                            <td class="fw-bold text-nowrap">@teacher.EmployeeNumber</td>
                            <td>@teacher.User?.Name</td>
                            <td>@teacher.User?.Email</td>
                            <td class="text-nowrap">@teacher.Phone</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i>
                                    <span class="d-none d-md-inline">Editar</span>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-5">
                            <i class="bi bi-person-x d-block mb-2" style="font-size: 2.5rem;"></i>
                            No se encontraron docentes en la base de datos.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>