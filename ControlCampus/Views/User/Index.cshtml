@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<ControlCampus.Models.User>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 mb-0"><i class="bi bi-person-badge-fill"></i> <span class="d-none d-sm-inline">Gestión de</span> Usuarios</h2>
        <a asp-action="Create" class="btn btn-primary btn-sm btn-md-normal">
            <i class="bi bi-person-plus"></i> <span class="d-none d-sm-inline">Nuevo Usuario</span><span class="d-inline d-sm-none">Nuevo</span>
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0 table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="text-nowrap">Usuario</th>
                        <th>Email</th>
                        <th>Rol</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-secondary text-white rounded-circle d-flex justify-content-center align-items-center me-2 flex-shrink-0" style="width: 35px; height: 35px; min-width: 35px;">
                                        @user.Name.Substring(0, 1).ToUpper()
                                    </div>
                                    <span class="fw-bold text-nowrap">@user.Name</span>
                                </div>
                            </td>
                            <td class="small">@user.Email</td>
                            <td class="text-nowrap">
                                @if (user.RoleUsers != null && user.RoleUsers.Any())
                                {
                                    @foreach (var ru in user.RoleUsers)
                                    {
                                        <span class="badge bg-info text-dark me-1" style="font-size: 0.75rem;">
                                            @ru.Role?.Name
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small italic">Sin rol</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>