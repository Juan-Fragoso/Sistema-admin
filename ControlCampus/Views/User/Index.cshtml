
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<ControlCampus.Models.User>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-person-badge-fill"></i> Gestión de Usuarios</h2>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Usuario</th>
                        <th>Email</th>
                        <th>Rol</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-secondary text-white rounded-circle d-flex justify-content-center align-items-center me-2" style="width: 35px; height: 35px;">
                                        @user.Name.Substring(0, 1).ToUpper()
                                    </div>
                                    <span class="fw-bold">@user.Name</span>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.RoleUsers != null && user.RoleUsers.Any())
                                {
                                    @foreach (var ru in user.RoleUsers)
                                    {
                                        <span class="badge bg-info text-dark me-1">
                                            @ru.Role?.Name
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small">Sin rol</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>