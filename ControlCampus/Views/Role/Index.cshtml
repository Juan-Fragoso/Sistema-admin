@{
    ViewData["Title"] = "Roles del Sistema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<ControlCampus.Models.Role>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 mb-0">
            <i class="bi bi-shield-lock-fill text-primary"></i>
            <span class="d-none d-sm-inline">Roles del Sistema</span>
            <span class="d-inline d-sm-none">Roles</span>
        </h2>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0 table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-nowrap" style="width: 80px;">ID</th>
                        <th class="text-nowrap">Nombre del Rol</th>
                        <th>Descripción</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center py-5">
                                <i class="bi bi-info-circle fs-2 text-muted"></i>
                                <p class="mt-2 text-muted">No hay roles definidos.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td class="text-muted small">#@role.Id</td>
                                <td class="text-nowrap">
                                    <span class="badge rounded-pill bg-info text-dark shadow-sm">
                                        <i class="bi bi-key-fill me-1"></i>@role.Name.ToUpper()
                                    </span>
                                </td>
                                <td>
                                    @if (string.IsNullOrEmpty(role.Description))
                                    {
                                        <em class="text-muted small">Sin descripción disponible</em>
                                    }
                                    else
                                    {
                                        <span class="small text-secondary">@role.Description</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>