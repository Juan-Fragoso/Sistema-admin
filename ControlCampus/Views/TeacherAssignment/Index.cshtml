@{
    ViewData["Title"] = "Asignación de Cursos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<ControlCampus.Models.CourseAssignment>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
    </div>

    <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-person-video3 me-2"></i>Asignar Docente a Curso</h5>
        </div>
        <div class="card-body bg-light-subtle">
            <form asp-action="SaveTeacherAssignment" method="POST">
                <div class="row g-3">
                    <div class="col-12 col-md-3">
                        <label class="form-label fw-semibold small">Docente</label>
                        <select name="TeacherId" class="form-select shadow-sm" required
                                asp-items="@(new SelectList(ViewBag.Teachers, "Id", "Name"))">
                            <option value="" selected disabled>Seleccione un docente...</option>
                        </select>
                    </div>
                    <div class="col-12 col-md-3">
                        <label class="form-label fw-semibold small">Materia</label>
                        <select name="SubjectId" class="form-select shadow-sm" required
                                asp-items="@(new SelectList(ViewBag.Subjects, "Id", "Name"))">
                            <option value="" selected disabled>Seleccione una materia...</option>
                        </select>
                    </div>
                    <div class="col-12 col-md-3">
                        <label class="form-label fw-semibold small">Grupo</label>
                        <select name="GroupId" class="form-select shadow-sm" required
                                asp-items="@(new SelectList(ViewBag.Groups, "Id", "Name"))">
                            <option value="" selected disabled>Seleccione un grupo...</option>
                        </select>
                    </div>
                    <div class="col-12 col-md-3 d-grid d-md-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100 shadow-sm">
                            <i class="bi bi-plus-circle me-1"></i> Asignar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white py-3">
            <h5 class="mb-0 h6"><i class="bi bi-table me-2"></i>Cursos y Docentes Asignados</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-nowrap">Docente</th>
                        <th class="text-nowrap">Materia</th>
                        <th class="text-nowrap">Grupo</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold text-dark">
                                    <i class="bi bi-person-badge me-2 text-primary"></i>@item.Teacher?.User?.Name
                                </td>
                                <td>
                                    <i class="bi bi-book me-1 text-secondary"></i>@item.Subject?.Name
                                </td>
                                <td>
                                    <span class="badge bg-primary-subtle text-primary border border-primary-subtle">
                                        <i class="bi bi-collection me-1"></i>@item.Group?.Name
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center py-5 text-muted">
                                <i class="bi bi-info-square d-block mb-2 fs-2"></i>
                                No hay asignaciones de cursos registradas.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>