@{
    ViewData["Title"] = "Inscripciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<ControlCampus.Models.Enrollment>

<div class="container mt-4">
    @* Sección de Alertas *@
    <div class="row">
        <div class="col-12">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
    </div>

    <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-journal-plus me-2"></i>Nueva Inscripción</h5>
        </div>
        <div class="card-body bg-light-subtle">
            <form asp-action="SaveEnrollment" method="POST">
                <div class="row g-3">
                    <div class="col-12 col-md-5">
                        <label class="form-label fw-semibold small">Estudiante</label>
                        <select name="StudentId" class="form-select shadow-sm" required
                                asp-items="@(new SelectList(ViewBag.Students, "Id", "Name"))">
                            <option value="" selected disabled>Seleccione un estudiante...</option>
                        </select>
                    </div>

                    <div class="col-12 col-md-5">
                        <label class="form-label fw-semibold small">Grupo</label>
                        <select name="GroupId" class="form-select shadow-sm" required
                                asp-items="@(new SelectList(ViewBag.Groups, "Id", "Name"))">
                            <option value="" selected disabled>Seleccione un grupo...</option>
                        </select>
                    </div>

                    <div class="col-12 col-md-2 d-grid d-md-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100 shadow-sm">
                            <i class="bi bi-plus-lg me-1"></i> Agregar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white py-3">
            <h5 class="mb-0 h6"><i class="bi bi-list-ul me-2"></i>Lista de Inscripciones Actuales</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-nowrap">Estudiante</th>
                        <th class="text-nowrap">Boleta</th>
                        <th class="text-nowrap">Grupo</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold text-dark">
                                    <i class="bi bi-person me-2 text-secondary"></i>@item.Student?.User?.Name
                                </td>
                                <td><span class="badge bg-secondary-subtle text-secondary border">@item.Student?.Boleta</span></td>
                                <td>
                                    <span class="text-primary fw-semibold"><i class="bi bi-people me-1"></i>@item.Group?.Name</span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox d-block mb-2 fs-2"></i>
                                No hay inscripciones registradas.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>