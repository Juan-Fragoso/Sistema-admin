@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<ControlCampus.Models.Subject>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 mb-0"><i class="bi bi-book text-primary"></i> <span class="d-none d-sm-inline">Catálogo de</span> Materias</h2>

        <a asp-action="Create" class="btn btn-success btn-sm btn-md-normal">
            <i class="bi bi-plus-lg"></i> <span class="d-none d-sm-inline">Registrar Materia</span>
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0 table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="text-nowrap" style="width: 80px;">ID</th>
                        <th class="text-nowrap">Código</th>
                        <th class="text-nowrap">Nombre de la Materia</th>
                        <th class="text-nowrap text-center">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-muted small">#@item.Id</td>
                                <td class="text-nowrap">
                                    <span class="badge bg-secondary-subtle text-secondary border">
                                        @(string.IsNullOrEmpty(item.Code) ? "Sin código" : item.Code)
                                    </span>
                                </td>
                                <td class="fw-bold text-dark">@item.Name</td>
                                <th class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil-square"></i> <span class="d-none d-md-inline">Editar</span>
                                    </a>
                                </th>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center py-5 text-muted">
                                <i class="bi bi-journal-x d-block mb-2" style="font-size: 2.5rem;"></i>
                                No hay materias registradas.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>