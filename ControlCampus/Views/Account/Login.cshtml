@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Control Campus</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <style>
        body {
            /* Gradiente moderno que combina con temas académicos */
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-card {
            border: none;
            border-radius: 20px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

        .login-header {
            background-color: #ffffff;
            padding: 2.5rem 2rem 1rem 2rem;
            text-align: center;
            border-bottom: none;
        }

            .login-header i {
                font-size: 3.5rem;
                color: #1e3c72;
            }

        .form-control {
            border-radius: 10px;
            padding: 12px 15px;
            border: 1px solid #dee2e6;
        }

            .form-control:focus {
                box-shadow: 0 0 0 0.25rem rgba(30, 60, 114, 0.15);
                border-color: #1e3c72;
            }

        .btn-login {
            background-color: #1e3c72;
            border: none;
            border-radius: 10px;
            padding: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                background-color: #2a5298;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            }

        .input-group-text {
            background-color: #f8f9fa;
            border-radius: 10px 0 0 10px;
        }

        /* Estilo para los inputs con icono */
        .input-group > .form-control {
            border-radius: 0 10px 10px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-11 col-sm-8 col-md-6 col-lg-4">

                <div class="card login-card shadow-lg">
                    <div class="login-header">
                        <i class="bi bi-mortarboard-fill"></i>
                        <h2 class="fw-bold mt-3 text-dark">Control Campus</h2>
                        <p class="text-muted">Gestión Académica Digital</p>
                    </div>

                    <div class="card-body p-4 pt-0">
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <div>@ViewBag.Error</div>
                            </div>
                        }

                        <form asp-action="Login" method="post">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Correo Electrónico</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input type="email" name="email" class="form-control" placeholder="usuario@campus.com" required />
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">Contraseña</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                    <input type="password" name="password" class="form-control" placeholder="••••••••" required />
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary btn-login w-100 mb-3">
                                Iniciar Sesión <i class="bi bi-box-arrow-in-right ms-2"></i>
                            </button>
                        </form>
                    </div>

                    <div class="card-footer bg-light border-0 py-3 text-center">
                        <small class="text-muted">Versión 3.0 &copy; @DateTime.Now.Year</small>
                    </div>
                </div>

                <div class="text-center mt-4 text-white-50">
                    <small>¿Olvidaste tu contraseña? Contacta al administrador.</small>
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>