
@{
    ViewData["Title"] = "MyGrades";
}

@using ControlCampus.Models.ViewModels

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-journal-check text-primary"></i> Mis Calificaciones</h2>
        <div class="card bg-primary text-white p-2">
            <h4 class="mb-0">Promedio General: @Model.Average</h4>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Materia</th>
                        <th>Profesor</th>
                        <th class="text-center">Calificación</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Grades.Count == 0)
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">
                                Aún no tienes calificaciones registradas.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var grade in Model.Grades)
                        {
                            <tr>
                                <td class="fw-bold">@grade.Subject.Name</td>
                                <td>@grade.Teacher.User.Name</td>
                                <td class="text-center">
                                    <span class="badge @(grade.GradeValue >= 6 ? "bg-success" : "bg-danger") fs-6">
                                        @grade.GradeValue
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>