@model IEnumerable<ControlCampus.Models.Student>
@{
    ViewData["Title"] = "Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4">Alumnos Registrados</h2>
        <a asp-action="Create" class="btn btn-success btn-sm btn-md-normal">
            <i class="bi bi-plus-lg"></i> <span class="d-none d-sm-inline">Registrar Alumno</span><span class="d-inline d-sm-none">Nuevo</span>
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover border mb-0">
            <thead class="table-dark">
                <tr>
                    <th class="text-nowrap">Boleta</th>
                    <th>Nombre completo</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th class="text-center">Acción</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var estudiante in Model)
                    {
                        <tr>
                            <td class="fw-bold">@estudiante.Boleta</td>
                            <td>@estudiante.User?.Name</td>
                            <td>@estudiante.User?.Email</td>
                            <td class="text-nowrap">@estudiante.Phone</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@estudiante.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> <span class="d-none d-md-inline">Editar</span>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            <i class="bi bi-info-circle d-block mb-2" style="font-size: 2rem;"></i>
                            No se encontraron estudiantes en la base de datos.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>