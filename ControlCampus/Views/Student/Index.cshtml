@model IEnumerable<ControlCampus.Models.Student>
@{
    ViewData["Title"] = "Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Alumnos Registrados</h2>
        <a asp-action="Create" class="btn btn-success">Registrar Alumno</a>
    </div>
</div>

<table class="table table-striped table-hover border">
    <thead class="table-dark">
        <tr>
            <th>Boleta</th>
            <th>Nombre completo</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var estudiante in Model)
            {
                <tr>
                    <td>@estudiante.Boleta</td>
                    @* Accedemos a los datos de la relación User *@
                    <td>@estudiante.User?.Name</td>
                    <td>@estudiante.User?.Email</td>
                    <td>@estudiante.Phone</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@estudiante.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">
                    No se encontraron estudiantes en la base de datos.
                </td>
            </tr>
        }
    </tbody>
</table>
