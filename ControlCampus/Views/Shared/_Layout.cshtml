<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ControlCampus</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    @using ControlCampus.Extensions
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand font-weight-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shield-lock"></i> ControlCampus
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsAdmin())
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="acadDrop" role="button" data-bs-toggle="dropdown">
                                        Académico
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Student" asp-action="Index">Estudiantes</a></li>
                                        <li><a class="dropdown-item" asp-controller="Teacher" asp-action="Index">Docentes</a></li>
                                        <li><a class="dropdown-item" asp-controller="Subject" asp-action="Index">Materias</a></li>
                                        <li><a class="dropdown-item" asp-controller="Group" asp-action="Index">Grupos</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="operDrop" role="button" data-bs-toggle="dropdown">
                                        Operaciones
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Enrollment" asp-action="Index">Inscripciones</a></li>
                                        <li><a class="dropdown-item" asp-controller="TeacherAssignment" asp-action="Index">Asignación Profesores</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="configDrop" role="button" data-bs-toggle="dropdown">
                                        Sistema
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="User" asp-action="Index">Usuarios</a></li>
                                        <li><a class="dropdown-item" asp-controller="Role" asp-action="Index">Roles</a></li>
                                    </ul>
                                </li>
                            }         
                            
                            @if (User.IsTeacher())
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="operDrop" role="button" data-bs-toggle="dropdown">
                                        Operaciones
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="GroupSubject" asp-action="Index">Grupos/Materias</a></li>
                                    </ul>
                                </li>
                            }

                            @if (User.IsStudent())
                            {
                                <li class="nav-item">
                                    <a class="dropdown-item text-white" asp-controller="Student" asp-action="MyGrades">Mis calificaciones</a>
                                </li>
                            }                            
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle btn btn-outline-light border-0" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="p-0">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary text-white" asp-controller="Account" asp-action="Login text-white">Iniciar Sesión</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger shadow-sm">
                    @Html.ValidationSummary(false, "Errores encontrados:")
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white py-3">
        <div class="container text-center">
            &copy; 2026 - ControlCampus - <a asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>