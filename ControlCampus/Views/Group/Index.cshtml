@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<ControlCampus.Models.Group>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 mb-0"><i class="bi bi-people-fill text-primary"></i> <span class="d-none d-sm-inline">Catálogo de</span> Grupos</h2>
     
        <a asp-action="Create" class="btn btn-success btn-sm btn-md-normal">
            <i class="bi bi-plus-lg"></i> <span class="d-none d-sm-inline">Registrar Grupo</span>
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0 table-responsive">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="text-nowrap" style="width: 80px;">ID</th>
                        <th class="text-nowrap">Nombre del Grupo</th>
                        <th class="text-nowrap">Periodo</th>
                        <th class="text-nowrap">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center py-5 text-muted">
                                <i class="bi bi-folder-x d-block mb-2" style="font-size: 2rem;"></i>
                                No hay grupos registrados en el sistema.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var group in Model)
                        {
                            <tr>
                                <td class="text-muted small">#@group.Id</td>
                                <td class="fw-bold text-primary text-nowrap">@group.Name</td>
                                <td class="text-nowrap">
                                    <span class="badge @(string.IsNullOrEmpty(group.Period) ? "bg-light text-dark border" : "bg-light text-primary border border-primary")">
                                        @(string.IsNullOrEmpty(group.Period) ? "N/A" : group.Period)
                                    </span>
                                </td>
                                <th class="text-center">
                                    <a asp-action="Edit" asp-route-id="@group.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil"></i> <span class="d-none d-md-inline">Editar</span>
                                    </a>
                                </th>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>