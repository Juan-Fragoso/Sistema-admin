
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<ControlCampus.Models.Group>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-people-fill"></i> Catálogo de Grupos</h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 100px;">ID</th>
                        <th>Nombre del Grupo</th>
                        <th>Periodo</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">
                                No hay grupos registrados en el sistema.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var group in Model)
                        {
                            <tr>
                                <td>@group.Id</td>
                                <td class="fw-bold text-primary">@group.Name</td>
                                <td>@(string.IsNullOrEmpty(group.Period) ? "N/A" : group.Period)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>